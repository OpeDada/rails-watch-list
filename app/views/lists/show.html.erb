<div class="buttons">
  <%= link_to 'Back to lists', lists_path, class: 'btn btn-gradient'%>
  <%= link_to 'Create a Bookmark', new_list_bookmark_path(@list), class: 'btn btn-gradient' %>
</div>
<div class="list-card-container">
  <div class="main-list-card">
    <% if @list.photo.attached? %>
      <div class="card-category-two" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>')">
        <h2><%= @list.name %></h2>
      </div>
    <% end %>
  </div>
  <div class="all-list-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="list-cards">
        <%= image_tag bookmark.movie.poster_url, width: '150x300', class: 'image' %>
        <div class="card-bookmark-infos">
          <h2>Title: <%= bookmark.movie.title %></h2>
          <%# <%= bookmark.movie.overview %>
          <p>Comment: <%= bookmark.comment %></p>
          <p>Rating: <%= bookmark.movie.rating %></p>
          <div class="delete">
            <%= link_to 'ðŸ—‘', bookmark_path(bookmark), method: :delete, data: { confirm: 'Delete bookmark?' }, class: "delete"  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
